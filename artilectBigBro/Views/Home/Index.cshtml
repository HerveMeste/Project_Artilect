@using Microsoft.AspNetCore.Identity
@using artilectBigBro.Models;
@{
    ViewData["Title"] = "Connexion";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}
@inject SignInManager<User> SignInManager

<section style="height: 100vh;">
    <div class="row d-flex flex-column align-content-center m-auto" style="position: relative; top: 20%;">
        <div class="border-top-0 px-4 col-sm-6">
                <section>
                    <div class="container-fluid">
                        <div class="text-center" style="display: flex; align-items: center; justify-content: center;">
                            <img src="~/images/ARTILECT.png" style="z-index: 1000; padding: 0.25rem; background-color: #fff; border: 1px solid #dee2e6; border-radius: 0.25rem; max-width: 100%; height: auto;" />
                        </div>
                    </div>
            @if (SignInManager.IsSignedIn(User))
            {
                    <div class="text-center" style="display: flex; justify-content: space-around; padding: 30px;">
                        <a href="Dashboard/Index" class="btn btn-primary border-0" style="background-color: #f6c4c4; color: black;">Dashboard</a>
                    </div>
            }
            else
            {
                    <div class="text-center" style="display: flex; justify-content: space-around; padding: 30px;">
                        <a href="Identity/Account/Login" class="btn btn-primary border-0" style="background-color: #f6c4c4; color: black;">Connexion</a>
                        <a href="Identity/Account/Register" class="btn btn-primary border-0" style="background-color: #f6c4c4; color: black;">S'enregistrer</a>
                    </div>
            }
                </section>
        </div>
    </div>
</section>